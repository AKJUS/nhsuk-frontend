{% set title = 'Select with hint text and error message' %}
{% from 'nhsuk/components/select/macro.njk' import select %}
{% extends 'layouts/example.njk' %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      {{ select({
        "id": "location",
        "name": "location",
        "label": {
          "text": "Choose location"
        },
        "hint": {
          "text": "This can be different to where you went before"
        },
        "errorMessage": {
          "text": "Select a location"
        },
        "value": "choose",
        "items": [
          {
            "value": "choose",
            "text": "Choose location"
          },
          {
            "value": "eastmidlands",
            "text": "East Midlands"
          },
          {
            "value": "eastofengland",
            "text": "East of England"
          },
          {
            "value": "london",
            "text": "London"
          },
          {
            "value": "northeast",
            "text": "North East"
          },
          {
            "value": "northwest",
            "text": "North West"
          },
          {
            "value": "southeast",
            "text": "South East"
          },
          {
            "value": "southwest",
            "text": "South West"
          },
          {
            "value": "westmidlands",
            "text": "West Midlands"
          },
          {
            "value": "yorkshire",
            "text": "Yorkshire and the Humber"
          }
        ]
      }) }}
    </div>
  </div>

{% endblock %}
