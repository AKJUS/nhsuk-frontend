{% extends "layouts/page.njk" %}

{% set htmlAttributes = htmlAttributes | default({ style: "background-color: #f0f4f5;" }) %}
{% set bodyAttributes = bodyAttributes | default(htmlAttributes) %}

{% block head %}
  {% include "partials/preload.njk" %}
  <link href="{{ baseUrl }}stylesheets/nhsuk-frontend.min.css" rel="stylesheet">
{% endblock %}

{# Turn the skip link off #}
{% block skipLink %}{% endblock %}

{% block content %}
  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-two-thirds">
      {% block example %}{% endblock %}
    </div>
  </div>
{% endblock %}

{% block bodyEnd %}
  <script type="module" src="{{ baseUrl }}javascripts/nhsuk-frontend.min.js"></script>
  <script type="module">
    import { initAll } from '{{ baseUrl }}javascripts/nhsuk-frontend.min.js'
    initAll()
  </script>
{% endblock %}}
